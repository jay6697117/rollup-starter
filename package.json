{
  "name": "rollup-starter-app",
  "scripts": {
    "build:dev": "rm -rf dist && rollup -c --environment MODE:dev",
    "build:prod": "rm -rf dist && rollup -c --environment MODE:prod",
    "watch": "rollup -c -w",
    "dev": "npm-run-all --parallel start watch",
    "start": "serve public"
  },
  "dependencies": {
    "date-fns": "^2.16.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-html": "^1.0.2",
    "@rollup/plugin-node-resolve": "^11.1.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.36.2",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-html2": "^3.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "serve": "^11.3.2"
  }
}
